<FlatButton@ButtonBehavior+Label>:
    font_size: 16

<SignupWindow>:
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (0,0,0,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "Registation Control"
            bold: True
            size_hint_x: 1
    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, 10
        BoxLayout:
        # Styles for the logo
            orientation: 'vertical'
            size: root.width, root.height
            Image:
                source: 'img/SIMlogo.png'
                allow_stretch: True
                keep_ratio: True
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 250
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
                id: first_name_field
                hint_text: "First Name"
                multiline: False
            TextInput:
                id: last_name_field
                hint_text: "Last Name"
                multiline: False
            TextInput:
                id: username_field
                hint_text: "User Name"
                multiline: False
            TextInput:
                id: pwd_field
                hint_text: "Password"
                multiline: False
            TextInput:
                id: designation_field
                hint_text:'Administrator or Operator'
                multiline: False

        Label:
            id: sp
            size_hint_y: None
            height: 40
        BoxLayout:
            spacing: 10
            Button:
                text: "Create User"
                size_hint_y: None
                height: 40
                background_color: (0,0,0,1)
                background_normal: ''
                on_release: root.add_user(first_name_field, last_name_field, username_field, pwd_field, designation_field)
        Label:
            id: sp2