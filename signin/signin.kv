<FlatButton@ButtonBehavior+Label>:
# Styles for the FlatButton widget
    font_size: 16

<SigninWindow>:
# Styles for the SigninWindow screen
    id: main_win
    orientation: "vertical"
    spacing: 150
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
    # Styles for the header box
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (0,0,0,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "SIM"
            bold: True
            size_hint_x: .9
        FlatButton:
            text: "x"
            size_hint_x: .1
    BoxLayout:
    # Styles for the content box
        orientation: 'vertical'
        padding: main_win.space_x, 10
        BoxLayout:
        # Styles for the logo
            orientation: 'vertical'
            size: root.width, root.height
            Image:
                source: 'img/SIMlogo.png'
                allow_stretch: True
                keep_ratio: True
        BoxLayout:
        # Styles for the input boxes
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 100
            Label:
                id: info
                text: ''
                markup: True
                size_hint_y: None
                height: 20
            TextInput:
            # Box for the username
                id: usr_field
                hint_text: "Username"
                multiline: False
                focus: True
                on_text_validate: pwd_field.focus = True
            TextInput:
            # Box for the password
                id: pwd_field
                hint_text: "Password"
                multiline: False
                password: True
                on_text_validate: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height: 40
        Button:
        # Sign in button
            text: "Sign In"
            size_hint_y: None
            height: 40
            background_color: (0,0,0,1)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id: sp2