<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperatorWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        id: header
        size_hint_y: None
        height: 40
        canvas.before:
            Color:
                rgba: (0,0,0,1)
            Rectangle:
                size: self.size
                pos: self.pos
        FlatButton:
            id: loggedin_user
            text: 'user'
            color: (1,1,1,1)
            size_hint_x: .1
            underline: True
        Label:
            text: 'SIM'
            size_hint_x: .7
            bold: True
            color: (1,1,1,1)
        FlatButton:
            id: close
            text: 'Log Out'
            size_hint_x: .1
            height: 30
            on_release: root.logout()
        FlatButton:
            id: close
            text: 'Quit'
            size_hint_x: .1
            height: 30
            on_release: Window.close()
    BoxLayout:
        id: current
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (0,0,0,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'Current Item:'
            background_normal: ''
            background_color: (.3,.3,.3,1)
            size_hint_x: .4
        Button:
            id: cur_product
            text: 'None'
            background_normal: ''
            background_color: (.3,.3,.3,1)
        Button: 
            id: cur_price
            text: '$0.00'
            background_normal: ''
            background_color: (.3,.3,.3,1)
            size_hint_x: .2
    BoxLayout:
        padding: 10
        BoxLayout:
            id: product_details
            orientation: "vertical"
            size_hint_x: .8
            spacing: 10
            BoxLayout:
                id: product_labels
                size_hint_y: None
                height: 40
                canvas.before:
                    Color:
                        rgba: (0,0,0,1)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                FlatButton:
                    text: 'Qty'
                    size_hint_x: .1
                FlatButton:
                    text: 'Product Name'
                    size_hint_x: .3
            BoxLayout:
                id: product_inputs
                size_hint_y: None
                height: 30
                spacing: 5
                TextInput:
                    id: qty_inp
                    size_hint_x: .1
                TextInput:
                    id: name_inp
                    size_hint_x: .3
                    multiline: False
                    on_text_validate: root.update_purchases()
            BoxLayout:
                id: add_to_cart
                orientation: 'vertical'
                BoxLayout:
                    size_hint_y: None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: (0,0,0,1)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Label:
                        text: 'Code'
                        size_hint_x: .2
                    Label:
                        text: 'Product Name'
                        size_hint_x: .3
                    Label:
                        text: 'Qty'
                        size_hint_x: .1
                    Label:
                        text: 'Price'
                        size_hint_x: .1
                GridLayout:
                    id: products
                    cols: 1
        BoxLayout:
            id: preview
            orientation: 'vertical'
            size_hint_x: .2
            TextInput:
                id: receipt_preview
                readonly: True
                text: 'SIM\n\nHolberton School\n\n'
    BoxLayout:
        id: footer
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (0,0,0,1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Jhonatan Rivera - Luis Colon - Gabriel Lopez'